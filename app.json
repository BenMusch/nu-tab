{
  "name":"nu-tab",
  "scripts": {
    "postdeploy": "bundle exec rails db:migrate db:seed"
  },
  "env":{
    "APPLICATION_HOST":{
      "required":true
    },
    "HEROKU_APP_NAME": {
      "required":true
    },
    "HEROKU_PARENT_APP_NAME": {
      "required":true
    },
    "RACK_ENV":{
      "required":true
    },
    "SECRET_KEY_BASE":{
      "generator":"secret"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    },
    {
      "url": "heroku/ruby"
    }
  ],
  "addons":[
    "heroku-postgresql"
  ]
}
