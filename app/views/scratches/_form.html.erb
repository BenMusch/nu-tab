<%= simple_form_for(@scratch) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :type, collection: Scratch.types, selected: @scratch.type %>
    <%= f.association :team %>
    <%= f.association :judge %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
