<p id="notice"><%= notice %></p>

<h1>Scratches</h1>

<table>
  <thead>
    <tr>
      <th>Team</th>
      <th>Debater</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @scratches.each do |scratch| %>
      <tr>
        <td><%= scratch.team_id %></td>
        <td><%= scratch.debater_id %></td>
        <td><%= scratch.type %></td>
        <td><%= link_to 'Show', scratch %></td>
        <td><%= link_to 'Edit', edit_scratch_path(scratch) %></td>
        <td><%= link_to 'Destroy', scratch, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Scratch', new_scratch_path %>
