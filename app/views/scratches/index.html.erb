<p id="notice"><%= notice %></p>

<h1>Scratches for <%= @entity.name %></h1>

<table>
  <thead>
    <tr>
      <th>Team</th>
      <th>Judge</th>
      <th>Type</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @scratches.each do |scratch| %>
      <tr>
        <td><%= link_or_none scratch.team %></td>
        <td><%= link_or_none scratch.debater %></td>
        <td><%= scratch.type %></td>
        <td><%= link_to 'Show', scratch %></td>
        <td><%= link_to 'Destroy', scratch, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Scratch', new_scratch_path %>
